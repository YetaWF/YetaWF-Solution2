{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": false,
    "lib": [ "dom", "es2015"],
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "none",
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noEmitHelpers": false,
    "jsx": "react",
    "jsxFactory": "$YetaWF.createElement",
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [ "jquery", "jqueryui", "kendo-ui", "urijs", "jquery-validation-unobtrusive" ]
  },
  "compileOnSave": false,
  "typeAcquisition": { "enable": false },
  "exclude": [
    "./bower_components",
    "./node_modules",
    "./wwwroot"
  ]
}
